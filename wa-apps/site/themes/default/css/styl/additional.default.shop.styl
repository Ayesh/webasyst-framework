@import "nib";

$_arrow_width = 48px
$_icon_w = 96px
$_icon_h = 96px

@import "./product.review.images.styl";

.s-review-images-section
.s-review-notice-section
    display inline-block
    vertical-align top
    width 70%;
    box-sizing border-box

    @media (max-width: 760px)
        width 100%

.s-review-wrapper
    .s-images-list
        margin 5px 0 0

        .s-image-wrapper
            display inline-block
            vertical-align top
            margin 0 15px 5px 0

            .s-image
                height 100px
                vertical-align top

.s-slider-section

    .s-layout
        display table
        width 100%

        &.inline
            width auto

        &.fixed
            table-layout fixed

        & > .s-column
            display table-cell
            vertical-align top

            &.middle
                vertical-align middle

            &.center
                text-align center

            &.right
                text-align right

    .bx-wrapper
        margin 0

        .bx-viewport
            top 0
            left 0
            padding 0
            border 0
            border-radius 1.072rem
            overflow hidden
            box-shadow var(--shadow)

        .bx-controls
            display: flex;
            justify-content: center;

            .bx-pager
                background: var(--white);
                display flex
                width: fit-content;
                padding: 8px 12px;
                border-radius: 20px;
                bottom: -10px;
                box-shadow: 0 5px 30px rgba(0, 0, 0, 0.05);

                &.bx-default-pager
                    a
                        background: rgba(0,0,0,0.15);

                        &.active
                        &:hover
                            background: var(--gray1) !important;

            .bx-controls-direction
                a
                    margin 0
                    transition all 222ms linear
                    z-index auto
                    overflow hidden
                    width: $_arrow_width;
                    height: $_arrow_width;
                    background: var(--white) url("data:image/svg+xml,%3Csvg width='18' height='15' viewBox='0 0 18 15' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M0.685547 7.64551C0.685547 7.37305 0.799805 7.10938 1.00195 6.91602L6.77637 1.1416C7.00488 0.921875 7.24219 0.825195 7.48828 0.825195C8.05078 0.825195 8.45508 1.2207 8.45508 1.75684C8.45508 2.03809 8.34082 2.27539 8.16504 2.45117L6.1875 4.45508L3.63867 6.78418L5.67773 6.66113H16.3301C16.9189 6.66113 17.3232 7.06543 17.3232 7.64551C17.3232 8.2168 16.9189 8.62109 16.3301 8.62109H5.67773L3.63867 8.49805L6.1875 10.8271L8.16504 12.8311C8.34082 13.0068 8.45508 13.2441 8.45508 13.5254C8.45508 14.0615 8.05078 14.457 7.48828 14.457C7.24219 14.457 7.00488 14.3604 6.79395 14.1582L1.00195 8.36621C0.799805 8.17285 0.685547 7.90918 0.685547 7.64551Z' fill='currentColor'/%3E%3C/svg%3E") center no-repeat;
                    box-shadow: var(--shadow);
                    border-radius: 15px;
                    top: calc(50% - 24px);

                    &:hover
                        background-position: 8px
                        transition: background-position 300ms

                    &.bx-prev
                        left -24px

                    &.bx-next
                        right -24px
                        transform: rotate(180deg);

    .s-slider-block
        margin 0
        padding 0

        .s-slide-wrapper
            position relative
            padding 0
            margin 0
            height 100%

            .s-slide-block
                box-sizing border-box

            .s-header
                margin 0
                color inherit
                font-size var(--h1-size)
                font-weight: 700
                line-height normal

                text-overflow ellipsis
                white-space nowrap
                overflow hidden

            .s-description
                font-size var(--h5-size)

            .s-price-wrapper
                margin 1.5em 0 0

                .s-price
                    font-size 1.6em

                .s-compare-price
                    font-size 1.2em

            .s-counter
                line-height: normal
                span
                    display inline-block
                    padding: 10px 16px;
                    background: rgba(0, 0, 0, 0.8);
                    border-radius: 15px;
                    font-weight: 600;
                    font-size: 1.5rem;
                    color: var(--yellow);

            .s-badge-wrapper
                .badge
                    span
                        font-size: .9rem;


            .s-image-wrapper
                position relative
                margin 1.5em 0 0

                img
                    display: inline-block;
                    vertical-align top
                    max-width 100%
                    max-height 320px
                    border-radius: 10px;

            .s-slide-link
                display block
                position absolute
                top 0
                left 0
                width 100%
                height 100%

    &.is-promocards
        //box-shadow: 0 5px 10px -5px rgba(0, 0, 0, 0.2);

        .bx-wrapper
            .bx-controls-direction
                a
                    &:after
                        background-image url("../img/bx-controls-white.png")

        .s-slider-block
            height 312px
            .s-slide-wrapper
                background transparent 50% 0 no-repeat
                background-size cover

                .s-slide-block
                    padding 2em

                .s-header
                .s-description
                    color inherit


    &.is-products
        box-shadow: 0 5px 30px rgba(0, 0, 0, 0.06);
        border-radius: 15px;
        background: var(--white);

        .bx-wrapper
            padding 40px 54px
            .s-slider-block
                .s-slide-wrapper
                    .s-slide-block
                        padding 0
                        .s-header
                            color var(--gray1)
                        .s-description
                            color var(--gray3)

    &.is-products-wide
        color var(--white)
        //box-shadow: 0 5px 10px -5px rgba(0, 0, 0, 0.2);

        .s-slider-block
            height 420px
            .s-slide-wrapper
                background transparent center no-repeat
                background-size cover
                position: relative;
                &::before
                    content ''
                    position: absolute;
                    width 100%
                    height:100%
                    background rgba(0,0,0, .1)

                .s-slide-block
                    position: relative;
                    margin 40px 54px
                    .s-header
                    .s-description
                    .s-price
                    .s-compare-price
                        color inherit

                    .s-description
                        padding-right 100px


                    .s-price-wrapper
                        padding 100px 0 0

.store-info
    .s-schedule-wrapper
        position relative

        &.is-open
            .s-label-wrapper
                .s-icon
                    transform rotate(180deg) translate(0,-1px)

            .s-hidden
                display block
                z-index 1

        .s-hidden
            display none
            position: absolute;
            top 100%
            left 50%
            width 275px
            padding 20px

            border 1px solid rgba(0,0,0,.1)
            border-radius 15px
            box-shadow: 0 10px 60px rgba(0, 0, 0, 0.1);
            transform translate(-50%,0);

            background var(--white)
            text-align left

        .s-label-wrapper
            display inline-block
            cursor pointer
            color var(--gray3)

            .s-icon
                display inline-block
                width: 9px;
                height: 9px;
                background transparent url("../img/svg/arrow.down.svg") 50% no-repeat
                background-size contain

        .s-days-wrapper
            margin 10px

            .s-day-wrapper
                margin-top: 15px
                display: flex;
                &:first-child
                    margin-top 0

                .s-date
                    display inline-block
                    vertical-align top
                    color var(--gray4)
                    font-size 14px
                    line-height (17/14)em

                .s-day-dot-divider
                    border-bottom: 1px dotted var(--gray5);
                    height: 1em;
                    margin: 0 5px;

                .s-value
                    display inline-block
                    vertical-align top
                    .s-time
                        color var(--gray1)
                    .s-text
                        color var(--gray3)

        .s-close-icon
            display block
            position absolute
            top 2px
            right 0
            width: 30px;
            height: 30px;
            color: var(--gray1);
            cursor pointer
